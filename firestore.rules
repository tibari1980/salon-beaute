rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      // Check if user has 'admin' user role
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection: 
    // - Owner can read/write their own profile
    // - Admin can read/write all profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Services collection:
    // - Read: Public
    // - Write: Admin only
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Appointments collection: 
    // - Create: Allowed for any authenticated user
    // - Read: Allowed for any authenticated user
    // - Update/Delete: Allowed only if the user owns the appointment OR is admin
    match /appointments/{appointmentId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }
  }
}
